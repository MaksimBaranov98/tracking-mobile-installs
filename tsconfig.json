{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["src/**/*.ts", "spec/**/*.ts", "build.ts"]
}
